<div class="row">

    <div class="col">
    </div>
    <div class="col">
        <div class="logo">
                <img src="/assets/images/logo.png" alt="Logo">
        </div>
    </div>
    <div class="col">
    </div>
</div>

    <div class="row">
        <div class="col-md-12 text-center">
            <p class="text">Select or Create a Burger to eat and Track What you Eat!</p>
            <form class="form">
                <div class="form-group">
                    <input type="text" placeholder="Burger name" id="inputBurger" name="name">
                </div>
                <button id="submit-btn" type="submit">ADD BURGER</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5 eat">
            <h2><strong>Burgers on the Menu<strong></h2>
            <ul>
                {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devour=true}} {{/unless}} {{/each}}
            </ul>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-5 eaten">
            <h2><strong>Already Eaten!<strong></h2>
            <ul>
                {{#each burgers}} {{#if devoured}}
                <div class="burgermenu">
                    <span class="label">#{{this.id}}</span>
                    <span class="label">{{this.burger_name}}</span>
                </div>
                {{/if}} {{/each}}
            </ul>
        </div>
        <div class="col-md-1"></div>
    </div>
